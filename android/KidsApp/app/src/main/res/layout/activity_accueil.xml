<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AccueilActivity"
    android:background="@drawable/fond">

    <include
        layout="@layout/main_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/utilisateur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bonjour, utilisateur"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp">
            <LinearLayout
                android:id="@+id/chiffres"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/custom_boite_grey"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingLeft="80dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginRight="48dp"
                    android:src="@drawable/icon"/>
                <TextView
                    android:layout_width="@dimen/large"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingTop="16dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Chiffres"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lettres"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/custom_boite_grey"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingLeft="80dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginRight="48dp"
                    android:src="@drawable/icon"/>
                <TextView
                    android:layout_width="@dimen/large"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Lettres"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/couleurs"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/custom_boite_grey"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingLeft="80dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginRight="48dp"
                    android:src="@drawable/icon"/>
                <TextView
                    android:layout_width="@dimen/large"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Couleurs"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/formes"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/custom_boite_grey"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingLeft="80dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginRight="48dp"
                    android:src="@drawable/icon"/>
                <TextView
                    android:layout_width="@dimen/large"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Formes"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/autres1"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/custom_boite_grey"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingLeft="80dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginRight="48dp"
                    android:src="@drawable/icon"/>
                <TextView
                    android:layout_width="@dimen/large"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Autres"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/autres2"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/custom_boite_grey"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingLeft="80dp"
                    android:layout_marginEnd="48dp"
                    android:layout_marginRight="48dp"
                    android:src="@drawable/icon"/>
                <TextView
                    android:layout_width="@dimen/large"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Autres"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/strok_red"
                android:layout_marginRight="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_power"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>