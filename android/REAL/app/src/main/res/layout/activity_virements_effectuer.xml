<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <include
        layout="@layout/main_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Effectuer un virement"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_boite_stroke"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compte a débiter :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text"/>
                <Spinner
                    android:id="@+id/compteDebit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hauteur"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_boite_grey" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin">
                <RadioButton
                    android:id="@+id/optionCompte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Créditez un de vos comptes"
                    android:textSize="@dimen/text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compte :"
                    android:textSize="8pt"
                    android:textColor="@color/black"/>
                <Spinner
                    android:id="@+id/compteCredit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hauteur"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_boite_grey" />

                <RadioButton
                    android:id="@+id/optionBenef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Créditez le compte d'un bénéficiaire"
                    android:textSize="@dimen/text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bénéficiaire :"
                    android:textSize="8pt"
                    android:textColor="@color/black"/>
                <Spinner
                    android:id="@+id/compteBenef"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hauteur"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/custom_boite_grey" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin">
                <Button
                    android:id="@+id/beneficiaire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ Ajouter un bénéficiaire"
                    android:background="@drawable/custom_boite_solid"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Montant * :"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/montant"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hauteur"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_boite_grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date d'execution * :"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hauteur"
                    android:hint="Select date"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_boite_grey" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motif * :"
                    android:textSize="@dimen/text"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/motif"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hauteur"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_boite_grey" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin">
                <Button
                    android:id="@+id/valider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valider"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>