<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sousMenu.virements.VirementsConfirm">
    <include
        layout="@layout/main_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmation du virement"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_boite_stroke"
            android:layout_margin="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Client à débiter :"
                        android:textSize="@dimen/text"
                        android:textColor="@color/white"
                        android:background="@color/green"/>
                    <TextView
                        android:id="@+id/clientDebit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ANDRIAMIALY Yves Ando"
                        android:textSize="@dimen/text"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Compte à débiter :"
                        android:textSize="@dimen/text"
                        android:textColor="@color/white"
                        android:background="@color/green"/>
                    <TextView
                        android:id="@+id/compteDebit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00015 00001 04846100001 59"
                        android:textSize="@dimen/text"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiers à créditer :"
                        android:textSize="@dimen/text"
                        android:textColor="@color/white"
                        android:background="@color/green"/>
                    <TextView
                        android:id="@+id/tiers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ANDRIAMIALY Yves Ando"
                        android:textSize="@dimen/text"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Compte à créditer :"
                        android:textSize="@dimen/text"
                        android:textColor="@color/white"
                        android:background="@color/green"/>
                    <TextView
                        android:id="@+id/compteCredit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00015 00001 04846100002 56"
                        android:textSize="@dimen/text"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Montant :"
                        android:textSize="@dimen/text"
                        android:textColor="@color/white"
                        android:background="@color/green"/>
                    <TextView
                        android:id="@+id/montant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,00 MGA"
                        android:textSize="@dimen/text"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date d'exécution :"
                        android:textSize="@dimen/text"
                        android:textColor="@color/white"
                        android:background="@color/green"/>
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04/11/2021"
                        android:textSize="@dimen/text"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Motif :"
                        android:textSize="@dimen/text"
                        android:textColor="@color/white"
                        android:background="@color/green"/>
                    <TextView
                        android:id="@+id/motif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2021Motifmot"
                        android:textSize="@dimen/text"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mdp"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mdp"/>
                    <ImageView
                        android:id="@+id/effacer"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:src="@drawable/effacer"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/btn7"
                        android:layout_width="@dimen/size"
                        android:layout_height="@dimen/size"
                        android:src="@drawable/sept"/>
                    <ImageView
                        android:id="@+id/btn8"
                        android:layout_width="@dimen/size"
                        android:layout_height="@dimen/size"
                        android:src="@drawable/huit"/>
                    <ImageView
                        android:id="@+id/btn9"
                        android:layout_width="@dimen/size"
                        android:layout_height="@dimen/size"
                        android:src="@drawable/neuf"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/btn4"
                        android:layout_width="@dimen/size"
                        android:layout_height="@dimen/size"
                        android:src="@drawable/quatre"/>
                    <ImageView
                        android:id="@+id/btn5"
                        android:layout_width="@dimen/size"
                        android:layout_height="@dimen/size"
                        android:src="@drawable/cinq"/>
                    <ImageView
                        android:id="@+id/btn6"
                        android:layout_width="@dimen/size"
                        android:layout_height="@dimen/size"
                        android:src="@drawable/six"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/btn1"
                        android:layout_width="@dimen/size"
                        android:layout_height="@dimen/size"
                        android:src="@drawable/un"/>
                    <ImageView
                        android:id="@+id/btn2"
                        android:layout_width="@dimen/size"
                        android:layout_height="@dimen/size"
                        android:src="@drawable/deux"/>
                    <ImageView
                        android:id="@+id/btn3"
                        android:layout_width="@dimen/size"
                        android:layout_height="@dimen/size"
                        android:src="@drawable/trois"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/btn0"
                        android:layout_width="@dimen/size"
                        android:layout_height="@dimen/size"
                        android:src="@drawable/zero"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/annuler"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Annuler"
                        android:layout_marginHorizontal="10dp"/>
                    <Button
                        android:id="@+id/valider"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Valider"
                        android:layout_marginHorizontal="10dp"/>
                </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>