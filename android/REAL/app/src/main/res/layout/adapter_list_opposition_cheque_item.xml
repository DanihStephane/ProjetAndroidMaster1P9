<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_boite_stroke">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N° :"
                android:textSize="@dimen/text"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:id="@+id/numero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3977"
                android:textSize="@dimen/text"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date d'opposition :"
                android:textSize="@dimen/text"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07/10/2021"
                android:textSize="@dimen/text"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N° de compte :"
                android:textSize="@dimen/text"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:id="@+id/numeroCompte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00015 00001 04846100002 56"
                android:textSize="@dimen/text"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Num. de cheque debut :"
                android:textSize="@dimen/text"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:id="@+id/debut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234581"
                android:textSize="@dimen/text"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Num. de cheque fin :"
                android:textSize="@dimen/text"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:id="@+id/fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234582"
                android:textSize="@dimen/text"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>