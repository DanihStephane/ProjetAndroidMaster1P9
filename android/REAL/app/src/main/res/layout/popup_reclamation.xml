<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">



    <LinearLayout
        android:id="@+id/mail"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/custom_boite_stroke"
        android:layout_margin="10dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="48dp"
            android:src="@drawable/ic_alternate_email"/>

        <TextView
            android:layout_width="@dimen/large"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="reclam@sipem.mg"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/custom_boite_stroke"
        android:layout_margin="10dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="48dp"
            android:src="@drawable/ic_contacts_phone"/>

        <TextView
            android:layout_width="@dimen/large"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="+261 22 22 691 03"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mess"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/custom_boite_stroke"
        android:layout_margin="10dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="48dp"
            android:src="@drawable/ic_message_reclam"/>

        <TextView
            android:layout_width="@dimen/large"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="+261 32 07 302 92"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>