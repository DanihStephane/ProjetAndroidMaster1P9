<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_boite_stroke">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intitules du compte :"
                android:textSize="@dimen/text"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:id="@+id/intitule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="compte DAV"
                android:textSize="@dimen/text"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero du compte :"
                android:textSize="@dimen/text"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:id="@+id/numero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00015-00001-12352100001-69"
                android:textSize="@dimen/text"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solde actuel :"
                android:textSize="@dimen/text"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:id="@+id/soldeActuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="@dimen/text"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Montant disponible :"
                android:textSize="@dimen/text"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_margin="@dimen/margin"/>
            <TextView
                android:id="@+id/montantDispo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="@dimen/text"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>